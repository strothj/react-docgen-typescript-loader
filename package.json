{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.10",
    "yarn": ">= 1.5.1"
  },
  "precommit": [
    "lint",
    "test",
    "clean",
    "build",
    "build-storybook"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "test": "lerna run --stream --concurrency 1 test",
    "lint": "tslint -p ./",
    "storybook": "lerna run --parallel storybook",
    "build-storybook": "lerna run --parallel build-storybook"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/memory-fs": "^0.3.1",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/webpack": "^4.4.5",
    "lerna": "^2.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.13.7",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2"
  }
}
